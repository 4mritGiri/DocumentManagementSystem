{
   "$schema": "https://railway.app/railway.schema.json",
   "build": {
     "builder": "DOCKERFILE",
     "nixpacksPlan": {
       "providers": [
         "python"
       ]
     },
     "dockerfilePath": "Dockerfile"
   },
   "deploy": {
     "numReplicas": 1,
     "startCommand": "python3 manage.py runserver 0.0.0.0:8000",
     "sleepApplication": false,
     "restartPolicyType": "ON_FAILURE",
     "restartPolicyMaxRetries": 10
   }
 }